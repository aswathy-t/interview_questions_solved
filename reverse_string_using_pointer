#include<stdio.h>
#include<string.h>
#include<stdlib.h>
int main()
{
    char* ptr=(char*)malloc(4*sizeof(char));
     for(int i=0;i<4;i++)
    {
        scanf("%c",ptr+i);
    }
    
    for(int i=3;i>=0;i--)
    {
        printf("%c",*(ptr+i));
    }

    
    
    return 0;
}
